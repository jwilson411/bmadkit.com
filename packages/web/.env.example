# =============================================================================
# BMAD Platform - Frontend (React/Vite) Environment Configuration  
# =============================================================================
# Copy this file to .env.local and update with your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_BASE_URL=ws://localhost:3001
VITE_CDN_BASE_URL=http://localhost:3001/static

# Environment
NODE_ENV=development
VITE_APP_ENV=development

# Stripe Public Configuration (Safe for client-side)
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-from-dashboard"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=true
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_OFFLINE_MODE=false

# Authentication Configuration
VITE_AUTH_COOKIE_NAME=bmad-session
VITE_SESSION_TIMEOUT=86400000

# UI Configuration
VITE_MAX_PROJECT_INPUT_LENGTH=5000
VITE_SESSION_TIMEOUT_MS=1800000
VITE_AUTO_SAVE_INTERVAL=30000
VITE_TYPING_INDICATOR_DELAY=1000

# Theme & Localization
VITE_THEME=light
VITE_LOCALE=en-US
VITE_TIMEZONE=America/New_York

# Real-time Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_HEARTBEAT_INTERVAL=25000

# Performance Configuration
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_SERVICE_WORKER=true

# Analytics & Monitoring (Optional)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=
VITE_GTM_ID=

# Social Authentication (Optional)
VITE_GOOGLE_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=

# Content Security Policy
VITE_CSP_REPORT_URI=

# Build Configuration
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=
VITE_APP_NAME="BMAD Platform"
VITE_APP_DESCRIPTION="AI-Powered Business Methodology and Analysis Design"