{
  "name": "@bmad/api",
  "version": "1.0.0",
  "description": "BMAD API - Backend orchestration services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:edge-cases": "jest --config src/tests/config/jest.edge-cases.config.js",
    "test:edge-cases:watch": "jest --config src/tests/config/jest.edge-cases.config.js --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:chaos": "jest --testPathPattern=chaos-engineering",
    "test:network": "jest --testPathPattern=network-resilience",
    "test:document-edge": "jest --testPathPattern=document-handling-edge-cases",
    "test:full-suite": "npm run test && npm run test:edge-cases",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@bmad/shared": "file:../shared",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "@prisma/client": "^5.7.1",
    "redis": "^4.6.12",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/nodemailer": "^6.4.14",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "@faker-js/faker": "^8.3.1",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "prisma": "^5.7.1",
    "typescript": "^5.3.3"
  }
}