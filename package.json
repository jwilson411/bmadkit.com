{
  "name": "bmad-platform",
  "version": "1.0.0",
  "description": "BMAD Web UI Platform - AI-powered project planning orchestration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev": "concurrently \"npm run dev --workspace=packages/api\" \"npm run dev --workspace=packages/realtime\" \"npm run dev --workspace=packages/web\"",
    "start": "npm run start --workspaces",
    "clean": "rimraf packages/*/dist packages/*/build node_modules packages/*/node_modules",
    "setup": "npm install && npm run build",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "bmad",
    "ai",
    "project-planning",
    "orchestration",
    "monorepo"
  ],
  "author": "BMAD Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmad-platform/bmad-web-ui"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@types/uuid": "^10.0.0",
    "bull": "^4.16.5",
    "ioredis": "^5.7.0",
    "openai": "^5.20.0",
    "uuid": "^13.0.0"
  }
}
